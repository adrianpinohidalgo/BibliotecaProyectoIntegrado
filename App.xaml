<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BibliotecaProyectoIntegrado"
             x:Class="BibliotecaProyectoIntegrado.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="PoppinsRegular" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="PoppinsRegular" />
            </Style>
            <Style x:Key="GenreButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#E0E0E0" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Padding" Value="15,5" />
                <Setter Property="HeightRequest" Value="32" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
