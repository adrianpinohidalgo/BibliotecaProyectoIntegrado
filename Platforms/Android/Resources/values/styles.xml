<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base de MAUI -->
    <style name="Maui.SplashTheme" parent="Theme.SplashScreen">
        <!-- Color de fondo de la pantalla de splash -->
        <item name="android:windowBackground">@color/splash_background</item>
        
        <!-- O puedes usar directamente un drawable -->
        <!-- <item name="android:windowBackground">@drawable/splash_background</item> -->
        
        <!-- Configuración del splash screen icon (Android 12+) -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenIconSize">120dp</item>
        
        <!-- Color del status bar durante el splash -->
        <item name="android:statusBarColor">@color/splash_status_bar</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>